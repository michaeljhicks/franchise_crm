<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :business_name, style: "display: block" %>
    <%= form.text_field :business_name %>
  </div>

  <div>
    <%= form.label :street_address, style: "display: block" %>
    <%= form.text_field :street_address %>
  </div>

  <div class="grid">
    <div>
      <%= form.label :city, style: "display: block" %>
      <%= form.text_field :city %>
    </div>
    <div>
      <%= form.label :state, style: "display: block" %>
      <%= form.text_field :state %>
    </div>
    <div>
      <%= form.label :zip, style: "display: block" %>
      <%= form.text_field :zip %>
    </div>
  </div>

  <hr>
  <h3>Contacts</h3>
  <p><small>You can add up to 3 contacts for this customer.</small></p>

  <%= form.fields_for :contacts do |contact_form| %>
    <fieldset style="margin-bottom: 1rem;">
      <div class="grid">
        <div>
          <%= contact_form.label :name %>
          <%= contact_form.text_field :name %>
        </div>
        <div>
          <%= contact_form.label :role %>
          <%= contact_form.text_field :role %>
        </div>
      </div>
      <div class="grid">
        <div>
          <%= contact_form.label :phone %>
          <%= contact_form.text_field :phone %>
        </div>
        <div>
          <%= contact_form.label :email %>
          <%= contact_form.email_field :email %>
        </div>
      </div>
    </fieldset>
  <% end %>
  <hr>
  <%# --- END of Nested Contacts Section --- %>

  <%# --- Other Customer Fields --- %>
  <div class="grid">
    <div>
      <%= form.label :customer_since, style: "display: block" %>
      <%= form.date_field :customer_since %>
    </div>
    <div>
      <%= form.label :status, style: "display: block" %>
      <%= form.select :status, Customer.statuses.keys.map { |s| [s.humanize.titleize, s] } %>
    </div>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes, rows: 5 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>